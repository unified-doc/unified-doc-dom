{
  "name": "unified-doc-dom",
  "version": "0.1.5-beta.0",
  "description": "DOM APIs for unified-doc",
  "license": "MIT",
  "homepage": "https://github.com/unified-doc/unified-doc-dom",
  "repository": "unified-doc/unified-doc-dom",
  "bugs": "https://github.com/unified-doc/unified-doc-dom/issues",
  "author": "Chris Zhou <chrisrzhou@pm.me> (https://chrisrzhou.io)",
  "keywords": [
    "unified",
    "doc",
    "dom",
    "document",
    "file",
    "content",
    "unist",
    "hast",
    "parse",
    "html",
    "markdown",
    "text",
    "compile",
    "export",
    "annotate",
    "highlight",
    "nlp",
    "search",
    "browser"
  ],
  "scripts": {
    "bootstrap": "npm install",
    "build": "microbundle",
    "clean": "rm -rf dist",
    "dev": "microbundle watch",
    "lint": "xo --fix; tsc",
    "test": "echo 'probably too much effort to test.  PRs welcome :)'",
    "test:run": "npm run test"
  },
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "source": "index.js",
  "typings": "types/index.d.ts",
  "dependencies": {
    "rangy": "^1.3.0",
    "resize-observer-polyfill": "^1.5.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.3",
    "husky": "^4.2.5",
    "microbundle": "^0.12.2",
    "typescript": "^3.9.5",
    "xo": "^0.32.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint; npm run test:run; npm run clean; npm run build"
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "trailingComma": "all",
    "useTabs": false
  },
  "xo": {
    "env": [
      "browser"
    ],
    "prettier": true,
    "rules": {
      "@typescript-eslint/prefer-readonly-parameter-types": "off",
      "capitalized-comments": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-warning-comments": "off",
      "padding-line-between-statements": "off",
      "unicorn/prefer-query-selector": "off"
    }
  }
}
