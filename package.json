{
  "private": true,
  "name": "unified-doc-dom",
  "license": "MIT",
  "homepage": "https://github.com/unified-doc/unified-doc-dom",
  "repository": "unified-doc/unified-doc-dom",
  "bugs": "https://github.com/unified-doc/unified-doc-dom/issues",
  "author": "Chris Zhou <chrisrzhou@pm.me> (https://chrisrzhou.io)",
  "keywords": [
    "unified",
    "doc",
    "dom",
    "document",
    "file",
    "content",
    "unist",
    "hast",
    "parse",
    "html",
    "markdown",
    "text",
    "compile",
    "export",
    "annotate",
    "highlight",
    "nlp",
    "search",
    "browser"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna exec --parallel microbundle",
    "clean": "lerna exec --parallel 'rm -rf dist node_modules'",
    "dev": "lerna exec --parallel 'microbundle watch'",
    "lint": "xo --fix; tsc",
    "test": "jest --watch packages",
    "test:ci": "jest",
    "prepare": "npm run clean; npm run build",
    "publish": "lerna publish"
  },
  "dependencies": {
    "unified-doc-dom": "file:packages/unified-doc-dom"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.3",
    "@types/jest": "^26.0.9",
    "babel-jest": "^26.2.2",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "microbundle": "^0.12.2",
    "typescript": "^3.9.5",
    "xo": "^0.32.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm prepare; npm run lint; npm run test:ci"
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "trailingComma": "all",
    "useTabs": false
  },
  "xo": {
    "env": [
      "browser",
      "jest"
    ],
    "prettier": true,
    "rules": {
      "@typescript-eslint/prefer-readonly-parameter-types": "off",
      "capitalized-comments": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-warning-comments": "off",
      "padding-line-between-statements": "off",
      "unicorn/no-reduce": "off",
      "unicorn/prefer-query-selector": "off"
    }
  }
}
